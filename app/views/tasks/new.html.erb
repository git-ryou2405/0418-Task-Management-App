<% provide(:title, "New Task") %>

<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_tasks_path(@user_id, @task), local: true) do |f| %>
      <%= render 'shared/error_messages' %>
    
      <%= f.label :taskname, "名称", class: "label-taskpage" %>
      <%= f.text_field :taskname, class: "form-control" %>
    
      <%= f.label :detailed, "詳細", class: "label-taskpage" %>
      <%= f.text_area :detailed, rows: 5, class: "form-control" %>
      
      <%= f.submit '新規登録', class: "btn btn-lg btn-primary btn-taskpage" %>
    <% end %>
  </div>
</div>