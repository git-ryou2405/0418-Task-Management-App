<% provide(:title, "ゲストユーザー") %>

<h1>ゲストユーザーのタスク一覧</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
      <%= link_to "タスク新規作成", new_user_task_path, class: "btn btn-lg btn-primary pull-right" %>
    <table class="table table-hover" id="table-tasks">
      <thead>
        <tr>
          <th><%= Task.human_attribute_name :taskname %></th>
          <th><%= Task.human_attribute_name :created_at %></th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
        <% @tasks.each do |t| %>
          <tr>
            <td><%= link_to t.taskname, user_task_path(@user_id, t), id: "task-name" %></td>
            <td><%= l t.created_at, format: :long %></td>
            <td>
              <%= link_to "編集", edit_user_task_path(@user_id, t), class: "btn btn-success" %>
              <%= link_to "削除", user_task_path(@user_id, t), method: :delete,
                data: { confirm: "「#{t.taskname}」を削除します。よろしいですか？" },
                class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>