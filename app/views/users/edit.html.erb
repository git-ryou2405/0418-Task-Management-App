<% provide(:title, @user.name) %>
<h1>ユーザー情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: user_path(@user), local: true, method: :patch) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :name, class: "label-edit" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :email, class: "label-edit" %>
      <%= f.email_field :email, class: "form-control" %>
      
      <%= f.label :password, class: "label-edit" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.label :password_confirmation, class: "label-edit" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-block btn-edit" %>
    <% end %>
  </div>
</div>